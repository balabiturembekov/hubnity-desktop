{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hubnity",
  "version": "0.1.0",
  "identifier": "com.balabiturembek.hubnity",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Hubnity",
        "width": 335,
        "height": 840,
        "minWidth": 335,
        "minHeight": 480,
        "resizable": false,
        "center": true
      },
      {
        "label": "idle",
        "title": "Простой",
        "url": "idle.html",
        "width": 360,
        "height": 240,
        "minWidth": 320,
        "minHeight": 200,
        "resizable": false,
        "center": true,
        "visible": false,
        "decorations": true,
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null,
      "infoPlist": "Info.plist"
    }
  }
}
